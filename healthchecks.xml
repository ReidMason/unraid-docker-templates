<?xml version="1.0" encoding="utf-8"?>
<Containers>
    <Date>2021-03-03</Date>
    <Beta>False</Beta>
    <Name>Healthchecks</Name>
    <Overview>
    Healthchecks is a watchdog for your cron jobs. It's a web server that listens for pings from your cron jobs, plus a web interface.
    </Overview>
    <Registry>https://hub.docker.com/r/linuxserver/healthchecks</Registry>
    <GitHub>https://github.com/linuxserver/docker-healthchecks</GitHub>
    <Repository>linuxserver/healthchecks</Repository>
    <BindTime>true</BindTime>
    <Privileged>false</Privileged>
    <Environment>
        <Variable>
            <Name>SITE_ROOT</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>SITE_NAME</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>DEFAULT_FROM_EMAIL</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>EMAIL_HOST</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>EMAIL_PORT</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>EMAIL_HOST_USER</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>EMAIL_HOST_PASSWORD</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>EMAIL_USE_TLS</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>ALLOWED_HOSTS</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>SUPERUSER_EMAIL</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>SUPERUSER_PASSWORD</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>REGENERATE_SETTINGS</Name>
            <Value>False</Value>
        </Variable>
        <Variable>
            <Name>PUID</Name>
            <Value>99</Value>
        </Variable>
        <Variable>
            <Name>PGID</Name>
            <Value>100</Value>
        </Variable>
    </Environment>
    <Networking>
        <Mode>host</Mode>
        <Publish>
            <Port>
                <HostPort>8000</HostPort>
                <ContainerPort>8000</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/healthchecks</HostDir>
            <ContainerDir>/config</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <Icon>https://healthchecks.io/static/img/logo.png</Icon>
    <WebUI>http://[IP]:[PORT:8000]/</WebUI>
</Containers>