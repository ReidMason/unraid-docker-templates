<?xml version="1.0" encoding="utf-8"?>
<Containers>
    <Date>2020-10-31</Date>
    <Beta>False</Beta>
    <Name>Drone</Name>
    <Overview>
        Drone is a Continuous Integration platform built on Docker
    </Overview>
    <Registry>https://registry.hub.docker.com/u/drone/drone</Registry>
    <GitHub>https://github.com/drone/drone</GitHub>
    <Repository>drone/drone</Repository>
    <Support>https://github.com/drone/drone</Support>
    <BindTime>true</BindTime>
    <Privileged>false</Privileged>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>9080</HostPort>
                <ContainerPort>80</ContainerPort>
            </Port>
            <Port>
                <HostPort>90443</HostPort>
                <ContainerPort>443</ContainerPort>
            </Port>
        </Publish>
    </Networking>
    <Environment>
        <Variable>
            <Name>DRONE_GITEA_SERVER</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>DRONE_GITEA_CLIENT_ID</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>DRONE_GITEA_CLIENT_SECRET</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>DRONE_RPC_SECRET</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>DRONE_SERVER_HOST</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>DRONE_SERVER_PROTO</Name>
            <Value>http</Value>
        </Variable>
    </Environment>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/drone</HostDir>
            <ContainerDir>/data</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <WebUI>http://localhost:9080/</WebUI>
</Containers>